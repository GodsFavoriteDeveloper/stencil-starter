{
  "compilerOptions": {

    /* COMPILER */
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],

    /* MODULES */
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "es2017",
    "allowSyntheticDefaultImports": true,

    /* TYPE CHECKING */
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "checkJs": false,
    "jsx": "react",
    "jsxFactory": "h",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./stencil.config.ts",
    "src"
  ],
  "exclude": [
    "node_modules",
    "www",
  ]
}
